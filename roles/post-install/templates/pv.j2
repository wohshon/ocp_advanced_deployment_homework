{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "{{ volume }}"
  },
  "spec": {
    "capacity": {
        "storage": "{{ volsize }}"
    },
    "accessModes": [ "{{ mode }}" ],
    "nfs": {
        "path": "/srv/nfs/user-vols/{{ volume }}",
        "server": "support1.${GUID}.internal"
    },
    "persistentVolumeReclaimPolicy": "{{ reclaimPolicy }}"
  }
}
